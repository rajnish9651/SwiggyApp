<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/topImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/veg_icon" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="15dp"
            android:background="@drawable/best_seller_img" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topImg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Tandoori Paneer Craver (100cm)"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 169"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/star_icon" />

            <TextView
                android:id="@+id/foodRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 4.5" />

            <TextView
                android:id="@+id/foodTotalRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(4)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_bg"
            android:backgroundTint="#FFDBE6"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingEnd="8dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/save_list_icon"
                android:backgroundTint="#FFB4CF" />

            <TextView
                android:id="@+id/saveToEatlistText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Save to Eatlist"
                android:textColor="#675B64"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/foodDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="13"
            android:lines="2"
            android:text="Object class in Java is present in java.lang package.Every class in Java is directly " />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/imgText_container"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/discout_card"
            android:layout_width="135dp"
            android:layout_height="130dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/foodImgChild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/tandoori_carver_img">


            </ImageView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/addCardView"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginTop="-17dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/addtoCarttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ADD"
                android:textColor="#4CAF50"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/removeCardView"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginTop="-17dp"
            android:visibility="gone"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/removeItemtoCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/remove_icon"
                    android:backgroundTint="#00A96D"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itemCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:text="1"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/addItemtoCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/add_icon"
                    android:backgroundTint="#00A96D"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Customisable"
            android:textColor="#D9999797" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imgText_container"
        android:layout_marginTop="5dp"
        android:background="#11000000" />
</RelativeLayout>