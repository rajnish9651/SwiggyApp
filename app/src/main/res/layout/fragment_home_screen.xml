        <LinearLayout
            android:id="@+id/homeContainer"
            android:layout_width="match_parent"
            android:layout_height="353dp"
            android:layout_below="@+id/searchItems"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_card_conatiner"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/foodDelivery_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/card_food"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/food_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="FOOD DELIVERY"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/food_sub_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/food_heading"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="FOODIE WEEKENDS"
                            android:textColor="#787474"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/food_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/food_sub_heading"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/home_discount_bg"
                            android:paddingStart="4dp"
                            android:text="LIVE NOW"
                            android:textColor="#FF5722"
                            android:textSize="10sp" />

                        <ImageView
                            android:layout_width="136dp"
                            android:layout_height="146dp"
                            android:layout_below="@+id/food_status"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-18dp"
                            android:layout_marginBottom="-26dp"
                            android:background="@drawable/pizza_img_home"
                            android:scaleType="fitXY" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/instamart_id_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/instamart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/instamart_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="INSTAMART"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/instamart_sub_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/instamart_heading"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="GRAB MAAAAAD DEALS"
                            android:textColor="#787474"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/instamart_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/instamart_sub_heading"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/home_discount_bg"
                            android:paddingStart="4dp"
                            android:text="FREE DEAL AT RS49"
                            android:textColor="#FF5722"
                            android:textSize="10sp" />


                        <ImageView
                            android:layout_width="116dp"
                            android:layout_height="146dp"
                            android:layout_below="@+id/instamart_status"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-15dp"
                            android:layout_marginBottom="-6dp"
                            android:background="@drawable/teddy_bear_img" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top2_card_conatiner"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                android:layout_below="@+id/top_card_conatiner"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/dineout_id_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/dineout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/dineout_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="DINEOUT"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/dineout_sub_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dineout_heading"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:text="FESTIVE FAMILY DINING"
                            android:textColor="#787474"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dineout_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dineout_sub_heading"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/home_discount_bg"
                            android:paddingStart="4dp"
                            android:text="UT TO 50% OFF"
                            android:textColor="#FF5722"
                            android:textSize="10sp" />


                        <ImageView
                            android:layout_width="146dp"
                            android:layout_height="146dp"
                            android:layout_below="@+id/dineout_status"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-8dp"
                            android:layout_marginBottom="-16dp"
                            android:background="@drawable/dineout_img" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/card_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/genie_cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/card_genie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="7dp">

                            <TextView
                                android:id="@+id/genie_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GENIE"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/genie_sub_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/genie_heading"
                                android:maxLines="1"
                                android:text="SEND PARCELS"
                                android:textColor="#787474"
                                android:textSize="10sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/genie_img" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/scenes_cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:id="@+id/card_scenes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="7dp">

                            <LinearLayout
                                android:id="@+id/headingNew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/scenes_heading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SCENES"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:layout_toEndOf="@+id/scenes_heading"
                                    android:backgroundTint="@color/black"
                                    app:cardCornerRadius="6dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#FF5722"
                                        android:paddingStart="3dp"
                                        android:paddingEnd="2dp"
                                        android:text="NEW"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/scenes_sub_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/headingNew"

                                android:maxLines="1"
                                android:text="CURATED EVENTS"
                                android:textColor="#787474"
                                android:textSize="10sp"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="60dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/curated_event_img" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/homeContainer"
            android:background="#F1F4F3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Live \nit up!"
                android:textColor="#84898C"
                android:textSize="80sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Crafted with in Bengaluru,India"
                android:textColor="#84898C"
                android:textSize="16sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>