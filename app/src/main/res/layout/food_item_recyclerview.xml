<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/discout_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp">

            <RelativeLayout

                android:layout_width="130dp"
                android:layout_height="160dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/foodImg"
                    android:background="@drawable/subway_img"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#48000000"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/itemsdiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/above1"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-black"
                        android:text="50%OFF"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/above1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="UPTO RS100"
                        android:textColor="#E0FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/discout_card"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:background="@drawable/bolt_img"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/threedots"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subway"
                android:id="@+id/itemsName"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@drawable/circle_bg"
                    android:src="@drawable/baseline_star_rate_24" />

                <TextView
                    android:id="@+id/itemsRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 4.5 "
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/itemsTotalRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(14)"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/itemsDeliveredTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20-30 mins"
                    android:layout_marginStart="5dp"
                    android:textStyle="bold"/>



            </LinearLayout>

            <TextView
                android:id="@+id/cuisineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666A6C"
                android:text="Indian"
               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666A6C"
                android:text="sec 16." />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666A6C"
                android:text="1.3km" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/free_delivery_bg"
                android:backgroundTint="#1AC52AE0"
                android:paddingLeft="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:backgroundTint="#6C3EEB"
                    android:background="@drawable/scooter"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FREE DELIVERY"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#6C3EEB"
                    />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>