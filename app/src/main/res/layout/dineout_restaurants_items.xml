<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:background="@drawable/zafar_kulfi"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mughlai"
                    android:id="@+id/itemTypes"/>

                <TextView
                    android:id="@+id/addressRestro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Savoy suites, Sector 16, Noida 1"
                    android:layout_below="@+id/itemTypes"/>

                <TextView
                    android:id="@+id/retroType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@+id/itemTypes"
                    android:text="North Indian" />

                <TextView
                    android:id="@+id/restroPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:text="â‚¹1000 for two"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/restroPrice"
                    android:text="1.4 km"
                    />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/tableBooking"
                android:layout_width="127dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#D9D4D4"
                app:cardCornerRadius="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/bookingImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/genie2_icon"/>

                <TextView
                    android:layout_marginStart="3dp"
                    android:id="@+id/bookingText"
                    android:layout_toEndOf="@+id/bookingImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Table booking"/>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#4CAF50"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   >

                    <ImageView
                        android:id="@+id/discountRestro"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/white"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/discount_img"/>


                    <TextView
                        android:layout_toEndOf="@+id/discountRestro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Flate 35% off on walk-in"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="+1more"/>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Get extra 10% off using Dine150"
              android:textSize="15dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="20dp"
              android:textColor="#673AB7"/>



        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>